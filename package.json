{
  "name": "zapp-backend",
  "version": "0.3.3",
  "description": "Backend Manager for Zuz",
  "main": "index.js",
  "type": "commonjs",
  "author": "ZuzPK",
  "license": "ISC",
  "scripts": {
    "build:watch": "tsc --watch --incremental",
    "alias:watch": "tsc-alias -w",
    "build": "rm -rf dist && npm run db && tsc && tsc-alias",
    "dev": "concurrently --kill-others -n \"TSC,ALIAS,ZAPP\" -c \"blue,yellow,green\" \"npm run build:watch\" \"npm run alias:watch\" \"node dist/index.js\"",
    "db": "npx zorm pull",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@zuzjs/core": "^0.3.4",
    "@zuzjs/orm": "^0.3.16",
    "body-parser": "^2.2.2",
    "connect-redis": "^9.0.0",
    "cookie": "^1.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-session": "^1.19.0",
    "hashids": "^2.3.0",
    "http": "0.0.1-security",
    "jsonwebtoken": "^9.0.3",
    "multer": "2.0.2",
    "nodemailer": "^8.0.1",
    "picocolors": "^1.1.1",
    "redis": "^5.10.0",
    "reflect-metadata": "^0.2.2",
    "uuid": "^13.0.0",
    "web-push": "^3.6.7",
    "winston": "^3.19.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.6",
    "@types/chokidar": "^1.7.5",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/express-session": "^1.18.2",
    "@types/hashids": "^2.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/md5": "^2.3.6",
    "@types/node": "^25.2.2",
    "@types/web-push": "^3.6.4",
    "@types/ws": "^8.18.1",
    "chokidar": "^5.0.0",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "nodemon": "^3.1.11",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.3"
  }
}